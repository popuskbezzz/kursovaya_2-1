# Переменные окружения для docker-compose (шаблон, значения заменить).
POSTGRES_USER=worktime
POSTGRES_PASSWORD=worktime_password
POSTGRES_DB=worktime_db

# URL БД для FastAPI (используется в backend/app/config.py)
APP_DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Разрешённые источники для CORS (через запятую). Совместимо с Traefik и локальной разработкой.
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:5173

# Vite использует этот URL на этапе сборки фронтенда
VITE_API_URL=http://localhost/api

# Учётка pgAdmin (внутренний доступ через /pgadmin)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123

# BasicAuth для dashboard Traefik (используется в dynamic-файле traefik-auth).
# Значение — строка формата user:hashedpassword, можно сгенерировать: htpasswd -nb user pass
# Для корректной интерпретации знака $ в .env используйте экранирование через $$ (пример ниже).
TRAEFIK_BASIC_AUTH=admin:$$apr1$$H6uskkkW$$IgXLP6ewTrSuBkTrqE8wj/
